#:kivy 1.9.1

<LibraryBrowser>:
    size_hint: 1.0, 1.0
    orientation: "horizontal"

    card_catalog: card_catalog
    media_screen_manager: media_screen_manager

    CardCatalog:
        id: card_catalog
        size_hint: 0.3, 1.0

    MediaScreenManager:
        id: media_screen_manager
        size_hint: 0.7, 1.0

        pdf_screen: pdf_screen
        text_screen: text_screen

        TextScreen:
            id: text_screen
            name: 'TextScreen'
            manager: media_screen_manager

        PDFScreen:
            id: pdf_screen
            name: 'PDFScreen'
            manager: media_screen_manager

<PDFScreen>:

    filename: filename

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "This is a PDF! Save it to your device and open it with a PDF viewer."

        TextInput:
            id: filename
            text: "e.g. /some/directory/media.pdf"

        Button:
            text: "Save"
            on_release: root.save(filename.text)

<TextScreen>:
    text_widget: text_widget

    TextInput:
        id: text_widget
        text: "Welcome to the library!"
        readonly: True
